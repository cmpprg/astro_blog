---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";

const {title} = Astro.props;
---
<div class="header">
  <h1>{title}</h1>
  <nav>
    <Hamburger />
    <Navigation />
  </nav>
</div>

<style>
  div.header {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  div.nav {
    width: 50%;
  }
</style>